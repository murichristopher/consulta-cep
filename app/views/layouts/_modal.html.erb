<dialog id="my_modal_1" class="modal modal-middle">
  <div class="modal-box w-96 max-w-md rounded-2xl shadow-2xl p-8 relative">
    <form method="dialog">
      <button class="btn btn-sm btn-circle btn-ghost absolute top-3 right-3"
              onclick="closeModalWithAnimation()">
        ✕
      </button>
    </form>

    <h3 class="text-2xl font-bold text-center mb-4">
      🎨 <%= t('modal.theme_config') %>
    </h3>
    <p class="text-center text-gray-500 mb-4">
      <%= t('modal.select_theme') %>
    </p>

    <ul class="menu bg-base-200 rounded-box p-4 space-y-2 shadow-inner">
      <% themes = ['light', 'dark', 'cupcake', 'bumblebee', 'emerald'] %>
      <% themes.each do |theme| %>
        <li>
          <a href="#"
             data-action="click->theme#switch"
             data-theme-value="<%= theme %>"
             class="hover:bg-base-300 p-2 rounded-lg transition-colors duration-200 text-center font-semibold">
            <%= t("modal.themes.#{theme}") %>
          </a>
        </li>
      <% end %>
    </ul>

    <h3 class="text-xl font-bold text-center mt-6 mb-4">
      🌐 <%= t('modal.language_config') %>
    </h3>
    <div class="flex justify-center space-x-4">
      <button class="btn btn-outline btn-info w-24" onclick="changeLanguage('en')">
        🇬🇧 English
      </button>
      <button class="btn btn-outline btn-success w-24" onclick="changeLanguage('pt-BR')">
        🇧🇷 Português
      </button>
    </div>

    <div class="modal-action mt-4">
      <form method="dialog">
        <button class="btn btn-outline btn-error w-full" onclick="closeModalWithAnimation()">
          <%= t('modal.close') %>
        </button>
      </form>
    </div>
  </div>

  <form method="dialog" class="modal-backdrop">
    <button onclick="closeModalWithAnimation()">close</button>
  </form>
</dialog>