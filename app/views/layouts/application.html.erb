<!DOCTYPE html>
<html lang="<%= I18n.locale %>">
<head>
  <%= render "layouts/head" %>
  <style>
    .modal-box {
      transition: transform 0.3s ease, opacity 0.3s ease;
    }
    .modal-close-animation {
      transform: scale(0.8);
      opacity: 0;
    }
  </style>
</head>
<body data-controller="theme" data-theme-target="body" class="relative min-h-screen dbg-gray-50 ark:bg-dark-50">

  <header class="flex items-center justify-between p-4 bg-base-100 shadow-md">
    <div class="flex items-center space-x-2">
      <%= heroicon "location-marker", options: { class: "h-6 w-6 text-primary" } %>
      <h1 class="text-2xl font-bold text-primary">ConsultaCep</h1>
    </div>
    <button class="btn btn-primary" onclick="document.getElementById('my_modal_1').showModal()">
      <%= t('modal.open_config') %>
    </button>
  </header>

  <dialog id="my_modal_1" class="modal modal-middle">
    <div class="modal-box w-96 max-w-md rounded-2xl shadow-2xl p-8 relative">
      <form method="dialog">
        <button class="btn btn-sm btn-circle btn-ghost absolute top-3 right-3" onclick="closeModalWithAnimation()">âœ•</button>
      </form>

      <h3 class="text-2xl font-bold text-center mb-4">ğŸ¨ <%= t('modal.theme_config') %></h3>
      <p class="text-center text-gray-500 mb-4"><%= t('modal.select_theme') %></p>

      <ul class="menu bg-base-200 rounded-box p-4 space-y-2 shadow-inner">
        <% themes = ['light', 'dark', 'cupcake', 'bumblebee', 'emerald'] %>
        <% themes.each do |theme| %>
          <li>
            <a href="#"
               data-action="click->theme#switch"
               data-theme-value="<%= theme %>"
               class="hover:bg-base-300 p-2 rounded-lg transition-colors duration-200 text-center font-semibold">
              <%= theme.capitalize %>
            </a>
          </li>
        <% end %>
      </ul>

      <h3 class="text-xl font-bold text-center mt-6 mb-4">ğŸŒ <%= t('modal.language_config') %></h3>
      <div class="flex justify-center space-x-4">
        <button class="btn btn-outline btn-info w-24" onclick="changeLanguage('en')">ğŸ‡¬ğŸ‡§ English</button>
        <button class="btn btn-outline btn-success w-24" onclick="changeLanguage('pt-BR')">ğŸ‡§ğŸ‡· PortuguÃªs</button>
      </div>

      <div class="modal-action mt-4">
        <form method="dialog">
          <button class="btn btn-outline btn-error w-full" onclick="closeModalWithAnimation()">
            <%= t('modal.close') %>
          </button>
        </form>
      </div>
    </div>
    <form method="dialog" class="modal-backdrop">
      <button onclick="closeModalWithAnimation()">close</button>
    </form>
  </dialog>

  <script>
    function closeModalWithAnimation() {
      const modal = document.getElementById('my_modal_1');
      const modalBox = modal.querySelector('.modal-box');

      modalBox.classList.add('modal-close-animation');

      setTimeout(() => {
        modal.close();
        modalBox.classList.remove('modal-close-animation');
      }, 300);
    }

    function changeLanguage(lang) {
      fetch(`/change_language?lang=${lang}`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').content
        }
      })
        .then(response => response.json())
        .then(data => {
          if (data.success) {
            location.reload();
          }
        });
    }
  </script>

  <%= yield %>
</body>
</html>
