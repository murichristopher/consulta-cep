<div class="min-h-screen bg-base-200 p-4" data-controller="cep">
  <div class="max-w-6xl mx-auto space-y-6">

    <div class="card bg-base-100 shadow-xl p-4">
      <div class="card-body">
        <h2 class="card-title justify-center text-2xl mb-4">
          <%= t('ceps.index.search_title') %>
        </h2>

        <turbo-frame id="cep_result">
          <%= form_with url: ceps_path, method: :get, data: { turbo_frame: "cep_result", action: "turbo:submit-start->cep#showLoading" } do |f| %>
            <div class="form-control">
              <label class="label">
                <span class="label-text"><%= t('ceps.index.enter_cep') %></span>
              </label>
              <%= f.text_field :cep,
                    class: "input input-bordered",
                    placeholder: t('ceps.index.placeholder'),
                    data: { cep_target: "input", action: "input->cep#format" },
                    pattern: "\\d{5}-?\\d{3}",
                    maxlength: 9 %>
            </div>
            <div class="form-control mt-6">
              <%= f.submit t('ceps.index.search_button'), class: "btn btn-primary" %>
            </div>
          <% end %>

          <% if @address.present? %>
            <div class="text-center space-y-2 my-4 card bg-base-100 shadow-md p-4" data-cep-target="result">
              <p class="text-xl font-bold"><%= @address[:cep] %></p>
              <p class="text-lg"><strong><%= t('ceps.index.address') %>:</strong> <%= @address[:street] %></p>
              <p class="text-lg"><strong><%= t('ceps.index.district') %>:</strong> <%= @address[:district] %></p>
              <p class="text-lg"><strong><%= t('ceps.index.city') %>:</strong> <%= @address[:city] %></p>
              <p class="text-lg"><strong><%= t('ceps.index.state') %>:</strong> <%= @address[:state] %></p>
              <p class="text-lg"><strong><%= t('ceps.index.ddd') %>:</strong> <%= @address[:ddd] %></p>
            </div>
          <% elsif @error %>
            <div class="alert alert-error shadow-lg mt-4" data-cep-target="result">
              <div class="flex items-center">
                <%= heroicon "exclamation-triangle", options: { class: "h-8 w-6" } %>
                <span class="ml-2"><%= @error %></span>
              </div>
            </div>
          <% end %>
        </turbo-frame>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">

      <div class="card bg-base-100 shadow-md p-4 h-64 flex flex-col">
        <h3 class="font-bold text-lg text-center flex-none">
          <%= t('ceps.index.most_searched_ceps') %>
        </h3>
        <div class="mt-4 flex-1 overflow-y-auto">
          <% if @most_searched_ceps.present? %>
            <ul class="space-y-2">
              <% @most_searched_ceps.each do |cep, count| %>
                <li>üîç <%= cep %> - <strong><%= count %> <%= t('ceps.index.searches') %></strong></li>
              <% end %>
            </ul>
          <% else %>
            <p class="text-center opacity-70">
              <%= t('ceps.index.no_records') %>
            </p>
          <% end %>
        </div>
      </div>

      <div class="card bg-base-100 shadow-md p-4 h-64 flex flex-col">
        <h3 class="font-bold text-lg text-center flex-none">
          <%= t('ceps.index.ceps_by_state') %>
        </h3>
        <div class="mt-4 flex-1 overflow-y-auto">
          <% if @ceps_by_state.present? %>
            <ul class="space-y-2">
              <% @ceps_by_state.each do |state, count| %>
                <li>üìç <%= state %>: <%= count %> <%= t('ceps.index.ceps') %></li>
              <% end %>
            </ul>
          <% else %>
            <p class="text-center opacity-70">
              <%= t('ceps.index.no_records') %>
            </p>
          <% end %>
        </div>
      </div>

      <div class="card bg-base-100 shadow-md p-4 h-64 flex flex-col">
        <h3 class="font-bold text-lg text-center flex-none">
          <%= t('ceps.index.most_searched_by_location') %>
        </h3>
        <div class="mt-4 flex-1 overflow-y-auto">
          <% if @most_searched_by_location.present? %>
            <ul class="space-y-2">
              <% @most_searched_by_location.each do |(city, state), count| %>
                <li>üèôÔ∏è <%= "#{city}/#{state}" %>: <%= count %> <%= t('ceps.index.searches') %></li>
              <% end %>
            </ul>
          <% else %>
            <p class="text-center opacity-70">
              <%= t('ceps.index.no_records') %>
            </p>
          <% end %>
        </div>
      </div>

    </div>

  </div>
</div>